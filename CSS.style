/* Basic Reset and Global Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #333;
    background-color: #f4f4f4;
}

h1, h2, h3, h4 {
    color: #004d40; /* A dark green for headings */
}

/* Header and Navigation */
header {
    background-color: #e0f2f1; /* A light green for the header */
    padding: 20px;
    text-align: center;
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 20px;
}

.nav-links a {
    text-decoration: none;
    color: #004d40;
    font-weight: bold;
}

.hero {
    margin-top: 50px;
}

/* Section Styling */
section {
    padding: 50px 20px;
    text-align: center;
}

section:nth-child(even) {
    background-color: #fafafa;
}

/* Grid Layouts for Sections */
.resource-grid,
.subject-grid,
.career-grid,
.community-features,
.steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.resource-item,
.subject-item,
.career-item,
.feature-item,
.step-item {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Telegram Button */
.join-button {
    display: inline-block;
    background-color: #0088cc; /* Telegram's brand color */
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 20px;
}

/* Footer */
footer {
    background-color: #004d40;
    color: white;
    text-align: center;
    padding: 20px;
}

.contact-info p {
    margin: 5px 0;
}
